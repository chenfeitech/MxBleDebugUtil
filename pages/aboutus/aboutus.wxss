/* pages/aboutus/aboutus.wxss */

.container {
  background-color: #f5f5f5;
  padding: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* Logo 展示区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 10rpx;
  background-color: #fff;
  width: 100%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.logo-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-version {
  font-size: 28rpx;
  color: #666;
}

/* 菜单区域 */
.menu-section {
  background-color: #fff;
  width: 100%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 详情页面 */
.detail-section {
  background-color: #fff;
  width: 100%;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.detail-header {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.back-btn {
  font-size: 28rpx;
  color: #007aff;
  margin-right: 30rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.detail-content {
  padding: 40rpx;
}

.detail-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 联系信息 */
.contact-info {
  background-color: #f8f9fa;
  padding: 30rpx;
  border-radius: 15rpx;
  margin: 20rpx 0;
}

.contact-item {
  display: block;
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 10rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

/* 二维码区域 */
.qr-code-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
}

.qr-code {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.qr-text {
  font-size: 24rpx;
  color: #666;
}

/* 使用说明样式 */
.usage-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx 0;
}

.usage-list {
  background-color: #f8f9fa;
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.usage-item {
  display: block;
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 10rpx;
}

.usage-item:last-child {
  margin-bottom: 0;
}

.usage-note {
  display: block;
  font-size: 26rpx;
  color: #ff6b6b;
  background-color: #fff5f5;
  padding: 20rpx;
  border-radius: 10rpx;
  border-left: 4rpx solid #ff6b6b;
  margin-top: 20rpx;
}
